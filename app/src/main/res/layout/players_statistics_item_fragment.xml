<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statistics_titles_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:weightSum="4.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/first_rank_number_text_view"
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/first_rank_name_text_view"
            android:layout_weight="2.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/first_rank_result_text_view"
            android:textAlignment="textEnd"
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:weightSum="4.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/second_rank_number_text_view"
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/second_rank_name_text_view"
            android:layout_weight="2.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/second_rank_result_text_view"
            android:textAlignment="textEnd"
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>